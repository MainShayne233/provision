#!/usr/bin/env bash

install() {
  provision install "bazel"
  sudo apt install autoconf coreutils parallel
  (
    cd "/tmp"
    git clone https://github.com/sorbet/sorbet.git
    cd sorbet
    bazel build //main:sorbet --config=release-linux
    cp bazel-bin/main/sorbet "$OPT_DIR/"
  )
}

verify() {
  which_verify "sorbet"
}
