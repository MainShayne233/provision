#!/usr/bin/env bash

FILES=$(cat <<-END
/home/shayne/.ssh/id_rsa
/home/shayne/.ssh/id_rsa.pub
END
)

install() {
  for file in $FILES
  do
    echo "Please copy over a correct file for: $file"
    read -r
  done
}

verify() {
  for file in $FILES
  do
    if [ ! -f "$file" ]; then
      echo "$file is missing"
      exit 1
    fi
  done
}
